# for strings
    raw string: use 'r' before strings
        r"hello \" world" -> hello " world
        r"hello \\ world" -> hello \ world

    formated string: use 'f' before strings
        var name = "World"
        f"Hello {name}!" -> "Hello World!"

    multi-line strings:
        a = "\
    hello, I'm here to answer you.
    "
